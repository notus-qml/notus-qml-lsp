{
  "name": "notus-qml",
  "version": "1.0.0",
  "description": "Cooming soon...",
  "main": "./src/server.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc && tsc-alias && npm run build --workspaces",
    "start": "npm run build && node ./build/server.js",
    "dev": "tsc --watch",
    "watch": "tsc -w",
    "package": "pkg . --targets node18-win-x64 --output ../bin/qml-language.exe"
  },
  "keywords": [
    "typescript",
    "plugin",
    "architecture",
    "context"
  ],
  "author": "Luiz H.S",
  "license": "MIT",
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.0.0",
    "lodash": "^4.17.21",
    "nexe": "^5.0.0-beta.4",
    "pkg": "^5.8.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/module-alias": "^2.0.4",
    "commander": "^14.0.0",
    "cpx": "^1.5.0",
    "module-alias": "^2.2.3",
    "qmet": "file:../../qmet",
    "tree-sitter": "^0.25.0",
    "tsconfig-paths": "^4.2.0",
    "vscode-uri": "^3.1.0"
  },
  "pkg": {
    "scripts": "build/**/*.js",
    "assets": [
      "tree-sitter-qmljs/win32-x64/prebuilds/**/*"
    ]
  },
  "bin": {
    "qml-language": "./build/server.js"
  },
  "private": true,
  "workspaces": [
    "packages/notus-qml-core",
    "packages/notus-qml-types",
    "packages/notus-qml-test",
    "packages/notus-qml-utils",
    "packages/notus-qml-module-generator",
    "packages/notus-qml-rules"
  ],
  "engines": {
    "node": "22.11.0"
  }
}